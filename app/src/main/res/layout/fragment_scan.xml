<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Navigation.HomeActivity"
    >

    <androidx.camera.view.PreviewView
        android:id="@+id/viewfinder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

<FrameLayout
    android:layout_width="300dp"
    android:layout_height="90dp"
    android:background="@drawable/round_corner_xl"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginBottom="200dp">
    <TextView
        android:id="@+id/less_detail_result"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/round_corner_xl"
        android:gravity="center"
        android:padding="20dp"
        android:text="contoh hasil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="10dp"/>
</FrameLayout>
    <ImageButton
        android:id="@+id/capture_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/White"
        android:src="@drawable/capture_48px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
<ImageButton
    android:id="@+id/open_gallery"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/gallery_48px"
    android:backgroundTint="@color/White"
    android:background="@drawable/round_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/capture_button"
    android:layout_marginBottom="50dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>